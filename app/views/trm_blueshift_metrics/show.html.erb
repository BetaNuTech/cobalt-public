<% content_for :header do %>
  <div id="application_header_logo">
      <%= link_to root_path, data: { turbolinks: false } do %>
          <%= show_svg('cobalt_report_white.svg') %>
      <% end %>
  </div>
  <span id="header_title">TRM Blueshift Metrics for <strong><%=@team_name%></strong> on <strong><%=@date%></strong></span>
<% end %>

<div id="hud">
  <div id="loading"></div>
</div>

<div id="trm_blueshift_metrics">  
  <table id="trm_blueshift_metrics_table" class="stripe" width="100%" cellpadding="0" cellspacing="0" border="0" class="table" >
    <thead>
      <th>
        Property
      </th>
      <th>
        Current Trigger(s)
      </th>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<script>
    $(document).ready(function() {
        $('#hud').hide();
    });
</script>