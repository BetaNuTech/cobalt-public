<% content_for :header do %>
  <div id="application_header_logo">
      <%= link_to root_path, data: { turbolinks: false } do %>
          <%= show_svg('cobalt_report_white.svg') %>
      <% end %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>

<table class="entity_table properties_table" border="1">
  <thead>
    <tr>
      <th class="teams_table">Code</th>
      <th class="teams_table">Logo</th>
      <th class="teams_table">Slack_Channel</th>
      <th class="teams_table">Properties</th>
      <th class="teams_table">Team Lead (PM)</th>
      <th class="teams_table">Team Lead (MS)</th>
      <th class="teams_table" colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr class="teams_table <%= team.active ? 'active_team' : 'inactive_team'%>">
        <td class="teams_table"><%= team.code %></td>
        <td class="teams_table" ><%= retina_image_tag(team.logo, :small) if team.logo? %></td>
        <td class="teams_table" align="center"><%= team.slack_channel %></td>     
        <td class="teams_table"><%= team.property_names.html_safe %></td>
        <td class="teams_table"><%= team.lead_project_manager ? "#{team.lead_project_manager.first_name} #{team.lead_project_manager.last_name}" : '' %></td>
        <td class="teams_table"><%= team.lead_maint_super ? "#{team.lead_maint_super.first_name} #{team.lead_maint_super.last_name}" : '' %></td>
        <td class="teams_table"><%= link_to 'Show', team %></td>
        <td class="teams_table"><%= link_to 'Edit', edit_team_path(team) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
