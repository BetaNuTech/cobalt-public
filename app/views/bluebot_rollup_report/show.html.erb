
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<% content_for :header do %>
  <div id="application_header_logo">
      <%= link_to root_path, data: { turbolinks: false } do %>
          <%= show_svg('cobalt_report_white.svg') %>
      <% end %>
  </div>
  <span id="header_title">Bluebot Rollup Report</span>
<% end %>

<span id="bluebot_rollup_form">
<%= form_for(@report_form, url: bluebot_rollup_report_path, method: :get) do |form| %>
  <% if @team_codes.count > 0 %>
    <%= select_tag :team_code, options_for_select(@team_codes, @team_code) %>
  <% end %>
  <%= form.label :end_month, 'End Month', class: "bluebot_rollup_form_label" %>
  <%= form.select :end_month, end_of_month_selections(@report_form.end_month) %>
  <%= form.submit "Update", class: "bluebot_rollup_form_button" %>
<% end %>
</span>

